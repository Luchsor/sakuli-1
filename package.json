{
  "name": "sakuli",
  "private": true,
  "scripts": {
    "build": " lerna bootstrap && lerna run build",
    "postinstall": "node scripts/run-in-all-packages --cmd=\"npm i\"",
    "test": "lerna run test",
    "bootstrap": "lerna bootstrap",
    "share-scripts": "node scripts/distribute-npm-scripts"
  },
  "devDependencies": {
    "fs-extra": "^7.0.1",
    "lerna": "^3.4.3",
    "yargs": "^12.0.4"
  },
  "sharedScripts": {
    "typedoc": "typedoc --out ../../docs/api/{package} --hideGenerator --mode file --excludeExternals --readme README.md --exclude *.spec.* src/",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand"
  }
}
